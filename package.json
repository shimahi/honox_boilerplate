{
  "name": "honox_boilerplate",
  "type": "module",
  "scripts": {
    "// git clone したら最初にやる": "",
    "setup": "$npm_execpath install && $npm_execpath run seed:dev && cp .env.example .env && cp wrangler.toml.example wrangler.toml",
    "// ローカルサーバーの起動": "",
    "dev": "vite",
    "// アプリのビルド": "",
    "build": "vite build --mode client && vite build",
    "// Cloudflareにアプリをデプロイする": "",
    "deploy": "$npm_execpath run build && wrangler pages deploy ./dist",
    "// スキーマをもとにマイグレーションファイルを作る": "",
    "migrate:gen": "drizzle-kit generate:sqlite",
    "// ローカルDBにマイグレーションを適用する": "",
    "migrate:dev": "rm -rf .mf || true && mkdir -p ./.mf/d1/DB && touch ./.mf/d1/DB/db.sqlite && drizzle-kit push:sqlite",
    "// ↓ マイグレーションファイルをリモート開発環境のd1プロジェクトに適用するコマンド": "",
    "migrate:prod": "wrangler d1 migrations apply honox-db",
    "// ローカルDBにシードデータを投入する": "",
    "seed:dev": "$npm_execpath run migrate:dev && $npm_execpath run ./db/seed.ts",
    "type": "tsc -p ./tsconfig.json",
    "lint": "biome lint ./app ./server",
    "format": "biome format ./app ./server --write",
    "check": "biome check --apply ./app ./server",
    "test": "$npm_execpath test server/repositories/ && $npm_execpath test server/domains/"
  },
  "private": true,
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.29.3",
    "hono": "^4.0.4",
    "honox": "^0.1.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@faker-js/faker": "^8.4.1",
    "@hono/vite-cloudflare-pages": "^0.2.3",
    "better-sqlite3": "^9.4.1",
    "bun-types": "^1.0.26",
    "drizzle-kit": "^0.20.14",
    "fishery": "^2.2.2",
    "lefthook": "^1.6.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "wrangler": "^3.27.0"
  }
}
